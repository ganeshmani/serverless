{
  "name": "serverless-rds-crud",
  "version": "0.0.0",
  "description": "serverless app",
  "author": "ouistiti-dev",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "sls offline start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:migration:generate": "MIKRO_ORM_CLI_CONFIG=src/mikro-orm.config.ts npx mikro-orm migration:create",
    "db:migration:up": "MIKRO_ORM_CLI_CONFIG=src/mikro-orm.config.ts npx mikro-orm migration:up",
    "db:migration:down": "npx mikro-orm migration:down",
    "migration:prod": "node ./src/scripts/migration.js",
    "hook:before:deploy:deploy": "npm run migration:generate && npm run migration:up",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@mikro-orm/cli": "^6.2.7",
    "@mikro-orm/core": "^6.2.7",
    "@mikro-orm/migrations": "^6.2.7",
    "@mikro-orm/nestjs": "^5.2.3",
    "@mikro-orm/postgresql": "^6.2.7",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/common": "^10.3.8",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.8",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.3.8",
    "aws-serverless-express": "^3.3.5",
    "helmet": "^7.1.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^7.1.0",
    "uuid": "^9.0.1",
    "uuidv4": "^6.2.13"
  },
  "devDependencies": {
    "@hewmen/serverless-plugin-typescript": "^1.1.17",
    "@nestjs/testing": "^10.3.8",
    "@types/aws-lambda": "^8.10.15",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^20.12.12",
    "@types/superagent": "^8.1.7",
    "@types/supertest": "^6.0.2",
    "dotenv-flow": "^4.1.0",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "serverless-hooks": "^1.0.0",
    "serverless-offline": "^3.31.3",
    "serverless-plugin-optimize": "^4.0.2-rc.1",
    "serverless-plugin-scripts": "^1.0.2",
    "serverless-plugin-typescript": "^2.1.5",
    "serverless-scriptable-plugin": "^1.3.1",
    "supertest": "^7.0.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "typescript": "^5.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
